<Window x:Class="OneTrueError.Client.Wpf.ReportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OneTrueError.Client.Wpf"
        mc:Ignorable="d"
        Title="Application error" Height="570" Width="937">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="298"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Image Grid.Column="0"
               Grid.RowSpan="3"
               Source="{Binding  Source={RelativeSource Mode=FindAncestor, AncestorType=local:ReportDialog}, Path=SideBar}"
               />
        
        <ContentControl Grid.Column="1"
                        Grid.Row="1">
            <local:UserErrorDescriptionPresenter/>
        </ContentControl>
        
        <ContentControl Grid.Column="1"
                        Grid.Row="2">
            <local:NotificationControlPresenter/>
        </ContentControl>
        
    </Grid>
</Window>
