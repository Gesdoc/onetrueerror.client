<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:OneTrueError.Client.Wpf">
    
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    
    <DataTemplate DataType="{x:Type local:ErrorReportDialogPresenter}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <Image Grid.Column="0"
                   Grid.Row="0"
                   Grid.RowSpan="4"
                   Stretch="Fill"
                   StretchDirection="Both"
                   Source="Resources/bigstock-Output.jpg"
                   Margin="10"
               />

            <ContentControl Grid.Column="1"
                            Grid.Row="0"
                            Content="{Binding ErrorMessage}"
                            Margin="10"/>

            <ContentControl Grid.Column="1"
                            Grid.Row="1"
                            Content="{Binding UserErrorDescription}"
                            Margin="10"
                            Visibility="{Binding AskForUserDetails, Converter={StaticResource BooleanToVisibilityConverter}}"
                            />

            <ContentControl Grid.Column="1"
                            Grid.Row="2"
                            Content="{Binding NotificationControl}"
                            Margin="10"
                            Visibility="{Binding AskForEmailAddress, Converter={StaticResource BooleanToVisibilityConverter}}"
                            />

            <Grid Grid.Column="1"
                  Grid.Row="3"
                  Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0"
                        Command="{Binding SubmitCommand}"
                        Content="Submit"
                        Margin="5"/>
                <Button Grid.Column="1"
                        Command="{Binding CancelCommand}"
                        Content="Cancel"
                        Margin="5"
                        Visibility="{Binding AskForUserPermission, Converter={StaticResource BooleanToVisibilityConverter}}"
                        />
            </Grid>

        </Grid>
    </DataTemplate>

    <DataTemplate DataType="{x:Type local:ErrorMessagePresenter}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="Error Message"
                       FontWeight="Bold"
                       />
            <TextBlock Grid.Row="1"
                       Text="{Binding ExceptionMessage}"
                       />
        </Grid>
    </DataTemplate>

    <DataTemplate DataType="{x:Type local:UserErrorDescriptionPresenter}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="6*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="Feedback"
                       FontWeight="Bold"
                       />
            <TextBlock Grid.Row="1"
                       Text="Could you please let us know how to reproduce it?"
                       />
            <TextBox Grid.Row="2"
                     Text="{Binding UserDescription}"/>
        </Grid>
    </DataTemplate>

    <DataTemplate DataType="{x:Type local:NotificationControlPresenter}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="Status updates"
                       FontWeight="Bold"
                       />
            <TextBlock Grid.Row="1"
                       Text="Enter your email address if you would like to receive status updates about this error."
                       />
            <TextBox Grid.Row="2"
                     Text="{Binding Email}"/>
        </Grid>
    </DataTemplate>

</ResourceDictionary>